
@{
    ViewData["Title"] = "DisplayCategories";
}

@model List<Class1>

<h1>Display Categories</h1>

<form action="../Cat/DisplayByCategory" method="post">
    <select name="category">
        @for (int i = 0; i < Model.Count; i++)
        {
            <option value="@Model[i].id">@Model[i].name</option>
        }
    </select>
    <input type="submit" value="CATS!" />
</form>